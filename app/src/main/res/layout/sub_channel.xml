<?xml version="1.0" encoding="utf-8"?>
<!--
  Subscription Channel
  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:custom="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:gravity="center_vertical"
			  android:orientation="horizontal"
			  android:background="@color/subs_drawer_background">

	<!-- CHANNEL THUMBNAIL -->
	<free.rm.skytube.gui.businessobjects.InternetImageView
		android:id="@+id/sub_channel_thumbnail_image_view"
		android:layout_width="40dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
		android:adjustViewBounds="true"
		android:src="@drawable/channel_thumbnail_default"
		custom:defaultImage="@drawable/channel_thumbnail_default"/>

	<!-- CHANNEL NAME -->
	<TextView
		android:id="@+id/sub_channel_name_text_view"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:text="Channel Name"
		style="@style/SubsTextView"/>

	<!-- NEW VIDEOS UPLOADED SINCE LAST VISIT ? -->
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/sub_new_video"/>

</LinearLayout>