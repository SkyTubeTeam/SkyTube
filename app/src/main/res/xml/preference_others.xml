<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:key="@string/pref_key_default_tab"
		android:title="@string/pref_title_default_tab"
		android:entries="@array/default_tab"
		android:entryValues="@array/default_tab_values" />

	<EditTextPreference
		android:key="@string/pref_youtube_api_key"
		android:title="@string/pref_title_youtube_api_key"
		android:summary="@string/pref_summary_youtube_api_key"
		android:dialogTitle="@string/pref_title_youtube_api_key" />

	<!--<ListPreference-->
		<!--android:key="@string/pref_feed_notification_key"-->
		<!--android:title="@string/pref_title_feed_notification"-->
		<!--android:entries="@array/feed_notification"-->
		<!--android:entryValues="@array/feed_notification_values" />-->

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="@string/pref_key_allow_mobile_downloads"
		android:title="@string/pref_title_allow_mobile_downloads"
		android:summary="@string/pref_summary_allow_mobile_downloads"/>

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="@string/pref_key_disable_search_history"
		android:title="@string/pref_title_disable_search_history"
		android:summary="@string/pref_summary_disable_search_history"/>

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="@string/pref_key_subscriptions_alphabetical_order"
		android:title="@string/pref_title_subscriptions_alphabetical_order"
		android:summary="@string/pref_summary_subscriptions_alphabetical_order"
		/>

</PreferenceScreen>