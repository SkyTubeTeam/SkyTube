<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:key="@string/pref_key_default_tab_name"
		android:title="@string/pref_title_default_tab" />

	<MultiSelectListPreference
		android:key="@string/pref_key_hide_tabs"
		android:title="@string/pref_title_hide_tabs"
		android:summary="@string/pref_summary_hide_tabs"
		android:entries="@array/tab_list" />



	<EditTextPreference
		android:key="@string/pref_youtube_api_key"
		android:title="@string/pref_title_youtube_api_key"
		android:summary="@string/pref_summary_youtube_api_key"
		android:dialogTitle="@string/pref_title_youtube_api_key" />

	<!--<ListPreference-->
		<!--android:key="@string/pref_feed_notification_key"-->
		<!--android:title="@string/pref_title_feed_notification"-->
		<!--android:entries="@array/feed_notification"-->
		<!--android:entryValues="@array/feed_notification_values" />-->

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="@string/pref_key_subscriptions_alphabetical_order"
		android:title="@string/pref_title_subscriptions_alphabetical_order"
		android:summary="@string/pref_summary_subscriptions_alphabetical_order"/>


	<PreferenceCategory
		android:title="@string/pref_category_downloads">

		<CheckBoxPreference
			android:defaultValue="false"
			android:key="@string/pref_key_download_to_separate_directories"
			android:title="@string/pref_title_download_to_separate_directories"
			android:summary="@string/pref_summary_download_to_separate_directories"/>

		<Preference
			android:title="@string/pref_title_video_download_folder"
			android:key="@string/pref_key_video_download_folder"
			android:summary="@string/pref_summary_video_download_folder"
			/>

	</PreferenceCategory>

</PreferenceScreen>