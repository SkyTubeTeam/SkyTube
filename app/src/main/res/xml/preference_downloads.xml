<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_downloads">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_download_to_separate_directories"
            android:title="@string/pref_title_download_to_separate_directories"
            android:summary="@string/pref_summary_download_to_separate_directories"/>

        <Preference
            android:title="@string/pref_title_video_download_folder"
            android:key="@string/pref_key_video_download_folder"
            android:summary="@string/pref_summary_video_download_folder"
            />

        <ListPreference
            android:key="@string/pref_key_video_download_preferred_resolution"
            android:title="@string/pref_video_download_preferred_resolution_title" />

    </PreferenceCategory>

    <!--
        MOBILE NETWORK
    -->
    <PreferenceCategory
        android:title="@string/pref_category_mobile_network">

        <ListPreference
            android:key="@string/pref_key_preferred_res_mobile"
            android:title="@string/pref_title_preferred_res_mobile"
            android:summary="@string/pref_summary_preferred_res_mobile"/>

        <ListPreference
            android:entries="@array/pref_mobile_network_usage"
            android:entryValues="@array/pref_mobile_network_usage_values"
            android:defaultValue="@string/pref_mobile_network_usage_value_ask"
            android:key="@string/pref_key_mobile_network_usage_policy"
            android:title="@string/pref_title_mobile_network_usage"
            android:summary="@string/pref_summary_mobile_network_usage"/>
    </PreferenceCategory>


</PreferenceScreen>